<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="assets\icons\filled_star_icon.png" />
    <None Remove="assets\icons\like_icon.png" />
    <None Remove="assets\icons\search_icon.png" />
    <None Remove="assets\icons\star_icon.png" />
    <None Remove="assets\imdblogo.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="assets\icons\filled_star_icon.png" />
    <Resource Include="assets\icons\like_icon.png" />
    <Resource Include="assets\icons\search_icon.png" />
    <Resource Include="assets\icons\star_icon.png" />
    <Resource Include="assets\imdblogo.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
